{
	"name": "crockenhill/crockenhill",
	"description": "The Crockenhill Baptist Church website.",
	"keywords": ["crockenhill", "baptist", "church", "website", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": ">=5.6.4",
		"intervention/image": "2.*",
		"laravel/dusk": "^1.0",
		"laravel/framework": "5.4.*",
		"league/commonmark": "^0.15.3"
	},
  "require-dev": {
      "fzaninotto/faker": "~1.4",
      "mockery/mockery": "0.9.*",
      "phpunit/phpunit": "~5.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Crockenhill\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
