{
	"name": "crockenhill/crockenhill",
	"description": "The Crockenhill Baptist Church website.",
	"keywords": ["crockenhill", "baptist", "church", "website", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": ">=7.0.0",
		"intervention/image": "2.*",
		"laravel/dusk": "^3.0",
		"laravel/framework": "5.8.*",
		"laravel/helpers": "^1.2",
		"league/commonmark": "^1.3.2"
	},
  "require-dev": {
      "fzaninotto/faker": "~1.4",
      "mockery/mockery": "0.9.*",
      "phpunit/phpunit": "~7.0",
			"filp/whoops": "~2.0"
	},
	"autoload": {
		"classmap": [
			"database/seeds",
			"database/factories"
		],
		"psr-4": {
			"Crockenhill\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"extra": {
		"laravel": {
			"dont-discover": [
			]
		}
	},
	"scripts": {
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
			"@php artisan key:generate"
		],
		"post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
		"optimize-autoloader": true
  }
}
