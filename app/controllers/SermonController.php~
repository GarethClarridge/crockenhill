<?php

class SermonController extends BaseController {

    public function recent()
    {
        //get the latest 20 OldSermons from the database
        $evenings = OldSermon::where('service', 'evening')->orderBy('filename', 'desc')->take(10)->get();
        $mornings = OldSermon::where('service', 'morning')->orderBy('filename', 'desc')->take(10)->get();

        // and create a view which we return - note dot syntax to go into folder
        return View::make('pages.OldSermons', array('evenings' => $evenings, 'mornings' => $mornings));
    }

    public function current($OldSermon)
    {
        //get the current OldSermon
        $current_OldSermon = OldSermon::where('filename', $OldSermon)->first();

        // and create a view to return
        return View::make('pages.OldSermons.OldSermon', array('current_OldSermon' => $current_OldSermon));
    }

    public function preacher($preacher)
    {
        $preacher = str_replace('_', ' ', $preacher);
        $morning_OldSermons = OldSermon::where('preacher', $preacher)->where('service', 'morning')->orderBy('filename', 'desc')->get();
        $evening_OldSermons = OldSermon::where('preacher', $preacher)->where('service', 'evening')->orderBy('filename', 'desc')->get();

        return View::make('pages.OldSermons.OldSermonsbypreacher', array('preacher' => $preacher, 'morning_OldSermons' => $morning_OldSermons, 'evening_OldSermons' => $evening_OldSermons));
    }

    public function year($year)
    {
        $morning_OldSermons = OldSermon::where('date', 'LIKE', '%'.$year.'%')->where('service', 'morning')->orderBy('filename', 'desc')->get();
        $evening_OldSermons = OldSermon::where('date', 'LIKE', '%'.$year.'%')->where('service', 'evening')->orderBy('filename', 'desc')->get();

        return View::make('pages.OldSermons.OldSermonsbyyear', array('morning_OldSermons' => $morning_OldSermons, 'evening_OldSermons' => $evening_OldSermons, 'year' => $year));
    }

    public function series($series)
    {
        $series = str_replace('_', ' ', $series);
        $OldSermons = OldSermon::where('series', $series)->orderBy('filename', 'desc')->get();

        return View::make('pages.OldSermons.OldSermonsbyseries', array('OldSermons' => $OldSermons, 'series' => $series));
    }
}
?>
